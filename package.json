{
    "name": "email-onebox",
    "version": "1.0.0",
    "description": "Feature-rich email aggregation system with AI-powered categorization and RAG-based reply suggestions",
    "main": "dist/app.js",
    "scripts": {
        "dev": "nodemon src/app.ts",
        "build": "tsc",
        "start": "node dist/app.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "dev:full": "concurrently \"npm run dev\" \"cd frontend && npm start\"",
        "setup:elasticsearch": "docker-compose up -d",
        "logs:elasticsearch": "docker-compose logs -f elasticsearch"
    },
    "keywords": [
        "email",
        "imap",
        "elasticsearch",
        "ai",
        "categorization",
        "rag",
        "openai",
        "slack",
        "notifications"
    ],
    "author": "Email Onebox Team",
    "license": "MIT",
    "dependencies": {
        "@elastic/elasticsearch": "^8.11.0",
        "@google/generative-ai": "^0.24.1",
        "@pinecone-database/pinecone": "^6.1.2",
        "@slack/web-api": "^6.10.0",
        "autoprefixer": "^10.4.21",
        "axios": "^1.11.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "imap": "^0.8.19",
        "joi": "^17.11.0",
        "mailparser": "^3.6.5",
        "moment": "^2.29.4",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.11",
        "uuid": "^9.0.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.16",
        "@types/express": "^4.17.21",
        "@types/imap": "^0.8.42",
        "@types/jest": "^29.5.8",
        "@types/mailparser": "^3.4.6",
        "@types/moment": "^2.13.0",
        "@types/node": "^20.8.7",
        "@types/uuid": "^9.0.7",
        "concurrently": "^8.2.2",
        "imap-simple": "^5.1.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts",
            "**/?(*.)+(spec|test).ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/types/**/*"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "ignore": [
            "src/**/*.test.ts"
        ],
        "exec": "ts-node src/app.ts"
    }
}
