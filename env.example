# Email Onebox System - Environment Configuration
# Copy this file to .env and fill in your actual values

# =================================================================
# EMAIL ACCOUNTS (Minimum 2 required)
# =================================================================

# Gmail Account (use App Password, not regular password!)
EMAIL1_USER=your-gmail@gmail.com
EMAIL1_PASS=your-app-password
EMAIL1_HOST=imap.gmail.com
EMAIL1_PORT=993
EMAIL1_LABEL=Gmail

# Outlook/Office365 Account
EMAIL2_USER=your-email@outlook.com
EMAIL2_PASS=your-password
EMAIL2_HOST=outlook.office365.com
EMAIL2_PORT=993
EMAIL2_LABEL=Outlook

# Yahoo Account (Optional - if you want 3rd account)
EMAIL3_USER=your-email@yahoo.com
EMAIL3_PASS=your-app-password
EMAIL3_HOST=imap.mail.yahoo.com
EMAIL3_PORT=993
EMAIL3_LABEL=Yahoo

# =================================================================
# ELASTICSEARCH CONFIGURATION
# =================================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=emails
ELASTICSEARCH_LOG_LEVEL=info

# =================================================================
# GEMINI AI CONFIGURATION
# =================================================================
GEMINI_API_KEY=AIzaSyBddv1B8jw9nGD4m6UhYuaSlT-rdsSV2_4
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0
GEMINI_MAX_TOKENS=1000

# Note: For embeddings, we still need OpenAI as Gemini doesn't provide embeddings API
OPENAI_API_KEY=sk-your-openai-key-for-embeddings-only

# =================================================================
# SLACK INTEGRATION
# =================================================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#general
SLACK_ENABLED=true

# =================================================================
# WEBHOOK CONFIGURATION
# =================================================================
WEBHOOK_URL=https://webhook.site/your-unique-url
WEBHOOK_ENABLED=true
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT=5000

# =================================================================
# PINECONE (RAG Implementation)
# =================================================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=email
PINECONE_ENVIRONMENT=us-east-1

# =================================================================
# SERVER CONFIGURATION
# =================================================================
PORT=3000
NODE_ENV=development
HOST=localhost

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
LOG_LEVEL=info
LOG_FILE=logs/email-onebox.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_RATE_LIMIT=100
API_RATE_WINDOW=15

# =================================================================
# EMAIL PROCESSING CONFIGURATION
# =================================================================
EMAIL_SYNC_INTERVAL=30000
EMAIL_BATCH_SIZE=50
EMAIL_HISTORY_DAYS=30
EMAIL_MAX_ATTACHMENT_SIZE=10485760

# =================================================================
# AI PROCESSING CONFIGURATION
# =================================================================
AI_CATEGORIZATION_ENABLED=true
AI_REPLY_SUGGESTIONS_ENABLED=true
AI_BATCH_SIZE=10
AI_RETRY_ATTEMPTS=3

# =================================================================
# DEVELOPMENT CONFIGURATION
# =================================================================
DEBUG=email-onebox:*
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3001

# =================================================================
# FRONTEND CONFIGURATION (for dev:full script)
# =================================================================
FRONTEND_PORT=3001
FRONTEND_HOST=localhost 